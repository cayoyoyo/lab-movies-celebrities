<h2>Edit Movie</h2>

<form action="/movies/{{_id}}/edit" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{movie.title}}" required>

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="{{movie.genre}}" required>

  <label for="plot">Plot:</label>
  <textarea id="plot" name="plot" required>{{movie.plot}}</textarea>

  <label for="cast">Cast:</label>
  <select id="cast" name="cast" multiple>
    {{#each celebrities}}
      <option value="{{_id}}" {{#if ../movie.cast.includes _id}}selected{{/if}}>{{name}}</option>
    {{/each}}
  </select>

  <button type="submit">Update Movie</button>
</form>


