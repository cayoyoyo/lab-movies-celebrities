<a href="/">Home</a>
<h2>Movie Details</h2>

<p>Title: {{movie.title}}</p>
<p>Genre: {{movie.genre}}</p>
<p>Plot: {{movie.plot}}</p>

<p>Cast:</p>
<ul>
  {{#each movie.cast}}
    <li>Name: {{this.name}}</li>
    <li>Occupation: {{this.occupation}}</li>
    <li>Catch Phrase: {{this.catchPhrase}}</li>
  {{/each}}
</ul>

<a href="/movies/{{_id}}edit-movie" class="edit-button">Edit</a>


<form action="/movies/{{movie._id}}/delete" method="POST">
  <button type="submit">Delete Movie</button>
</form>


